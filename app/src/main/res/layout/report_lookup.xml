<!-- file: res/layout/activity_report_lookup.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnBackToHomeFromReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại" />

    <!-- Bố trí hàng ngang chứa EditText và Button tìm kiếm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <EditText
            android:id="@+id/edtSearchReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập tên hoặc ID báo cáo"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnSearchReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm báo cáo"
        android:layout_gravity="end"
        android:layout_marginTop="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>