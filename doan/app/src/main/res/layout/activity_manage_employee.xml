<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manageEmployee">

    <ListView
        android:id="@+id/lvEmployees"
        android:layout_width="409dp"
        android:layout_height="569dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="41dp" />

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvEmployees"
        app:srcCompat="?attr/homeAsUpIndicator"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/tvListEmployee"
        android:layout_width="411dp"
        android:layout_height="41dp"
        android:background="@color/cyan"
        android:gravity="center"
        android:text="Danh sách nhân viên"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAdd0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBtnBack"
        app:layout_constraintTop_toBottomOf="@+id/lvEmployees" />

    <Button
        android:id="@+id/btnDelete0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAdd0"
        app:layout_constraintTop_toBottomOf="@+id/lvEmployees"
        app:layout_constraintVertical_bias="0.506" />

    <Button
        android:id="@+id/btnEdit0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDelete0"
        app:layout_constraintTop_toBottomOf="@+id/lvEmployees"
        app:layout_constraintVertical_bias="0.506" />

</androidx.constraintlayout.widget.ConstraintLayout>